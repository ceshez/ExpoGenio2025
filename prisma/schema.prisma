generator client {
  provider = "prisma-client-js"
  engineType = "dataproxy"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SUBADMIN
  ADMIN
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password        String
  name            String
  lastName        String

  // NUEVOS 
  role            Role      @default(USER)
  recoveryEmail   String?   @unique
  photoUrl        String?
  photoBase64     String?

  // Verificaci√≥n y 2FA
  emailVerifiedAt DateTime?
  twoFAEnabled    Boolean   @default(false)
  twoFAMethod     String?   // "email" | "totp"

  favorites       Favorite[]

  // relaciones 2FA
  twoFactorToken  TwoFactorToken?
  preAuthToken    PreAuthToken?
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  kind      String   // "page" | "blog" | "tutorial" | "news" | "update"
  ref       String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, kind, ref], name: "favorites_user_kind_ref_idx")
}

// Guarda el OTP hasheado para login por correo
model TwoFactorToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Token opaco previo a completar 2FA (permite terminar el signIn sin reingresar password)
model PreAuthToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
